<% if !flash[:notice].blank? %>
  <div class=”notice”>
      <%=flash[:notice] %>
  </div>
<% end %>

<div class="login">
  <%= form_tag(:action => 'attempt_login') do %>
  <table>
    <tr>
      <td><h4><%= label_tag(:email) %></h4></td>
      <td><%= text_field_tag(:email) %></td>
    </tr>
    <tr>
      <td><h4><%= label_tag(:password) %></h4></td>
      <td><%= password_field_tag(:password) %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag("Login") %></td>
    </tr>
  </table>
  <% end %>
</div>
